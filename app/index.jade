  body(ng-app='gruntNgApp',onselectstart="return false",ng-keydown="keyman($event)")
    #tip(ng-show="tip") {{tip}}
    .header(ng-controller='UserCtrl')
      #headbar
        .title {{title}}
        .user(ng-show="user.status=='login'")
          .photo
          .name {{user.name}}
          .more
      #login(ng-hide="user.status=='login'",ng-class="{failed: user.status=='failed'}")
        .logo
        form.form-horizontal(ng-submit='login()')
          .input
            input.username(type='text', placeholder='Username', ng-model="username")
          .input
            input.password(type='password', placeholder='Password', ng-model="password")
          .toolbar
            .remember(ng-class="{checked: remember}",ng-click="toggle_remember()") Remember me
            button(type='submit') SIGN IN
          .message
            span *Invalid username or password
