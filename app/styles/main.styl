body
  background: #fafafa
  font-family: Lato, Helvetica, Arial, sans-serif;
  color: #333
  padding: 0
  margin: 0

iframe
  width: 595px
  height: 842px
  border: 0px
  margin: 0 auto

.item
  position: relative
  display: inline-block
  max-width: 100%
  padding: 0px
  background-size: cover
  background-position: center center
  border: none
  .checkbox
    background-repeat: no-repeat
    background-position: 5px 5px
    background-image: url('../images/checkbox_no.png')
  &.hover .checkbox
    border: 4px solid #666
    background-image: url('../images/checkbox_no_hover.png')
  &.active .checkbox
    border: 4px solid #0F0
    background-image: url('../images/checkbox_yes.png')
  &.active.hover .checkbox
    background-image: url('../images/checkbox_yes_hover.png')

.btn_blue, .btn_red
  display: block
  width: 108px
  height: 39px
  color: #FFF
  font-size: 80%
  cursor: pointer
  text-decoration: none
  line-height: 37px
  text-align: center

.btn_blue
  background: url('../images/btn_blue.png')
  &:active
    background: url('../images/btn_blue_active.png')
.btn_red
  background: url('../images/btn_red.png')
  &:active
    background: url('../images/btn_red_active.png')

$headbar_height=41px
#headbar
  position: fixed
  top: 0px
  left: 0px
  z-index: 8
  height: $headbar_height
  width: 100%
  background: url('../images/header_bg.png')
  .title
    margin: 0 auto
    padding: 4px 6px
  .user
    position: absolute
    right: 5px
    top: 5px

#login
  height: 240px
  width: 230px
  margin: 0 auto
  margin-top: 88px


$menu_height=43px
#menu
  position: fixed
  top: $headbar_height
  left: 0px
  z-index: 7
  height: $menu_height
  width: 100%
  background: url('../images/menu_bg.png')
  .nav
    display: block
    float: left
    width: 88px
    height: 22px
    cursor: pointer
    text-decoration: none
    line-height: 20px
    font-size: 80%
    color: #686B6F
    margin-left: 5px
    margin-top: (($menu_height - 24px) / 2)
    background: url('../images/nav.png')
    text-align: center
    &.active
      color: #FFF
      background: url('../images/nav_active.png')
  .toolbar-toggle
    width: 27px
    height: 24px
    position: absolute
    right: 5px
    top: (($menu_height - 24px) / 2)
    background: url('../images/toolbar_toggle.png')
    &.checked
      background: url('../images/toolbar_toggle_checked.png')

$toolbar_width=202px
#toolbar
  height: 100%
  width: $toolbar_width
  position: fixed
  top: $headbar_height + $menu_height
  right: - $toolbar_width
  z-index: 6
  transition: right 0.5s
  background: #D8D8D8
  .show-toolbar &
    right: 0px
  .selected
    width: 100%
    padding-top: 66px
    .item
      width: 82px
      height: 82px
      .checkbox
        height: 82px - 8px
  .next
    width: 100%
    position: absolute
    bottom: $headbar_height + $menu_height
    left: 0px
    padding-bottom: 5px
  .btn_blue, .btn_red
    margin: 0 auto

#main
  margin-top: $headbar_height + $menu_height
  margin-right: 0px
  transition: margin-right 0.5s
  background: #AAA
  .show-toolbar &
    margin-right: $toolbar_width
  .item
    height: 300px
    margin-left: 5px
    margin-top: 5px
    .checkbox
      height: 300px - 8px
  &.template
    display: table-cell
    vertical-align: middle
    text-align: center