body
  background: #fafafa
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif
  color: #333
  padding: 0
  margin: 0

.photo
  position: relative
  display: inline-block
  max-width: 100%
  padding: 0px
  background-size: cover
  background-position: center center
  border: none
  .checkbox
    background-repeat: no-repeat
    background-position: 5px 5px
  &.hover .checkbox
    border: 4px solid #666
    background-image: url('../images/checkbox_no.png')
  &.active .checkbox
    border: 4px solid #0F0
    background-image: url('../images/checkbox_yes.png')
  &.delete .checkbox
    border: 4px solid #F00
    background-image: url('../images/checkbox_del.png')

#toolbar
  height: 100%
  width: 200px
  position: fixed
  right: 0px
  background: #F00
  .logo
    width: 100%
    height: 66px
  .selected
    width: 100%
    height: 100%
    padding-top: 66px
    overflow-y: scroll
    .photo
      width: 100%
      height: 160px
      .checkbox
        height: 160px - 8px

#menu
  width: 100%
  height: 48px
  a
    padding: 8px 24px 12px 24px
    cursor: pointer

#main
  margin-right: 200px
  background: #FF0
  .photo
    height: 300px
    margin-left: 5px
    margin-top: 5px
    .checkbox
      height: 300px - 8px